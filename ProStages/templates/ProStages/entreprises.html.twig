{% extends 'base.html.twig' %}

{% block titrePage %}
	Trouve un stage en fonction de l'entreprise choisie
{% endblock %}


{% block contenuPage %}
	<div class="col-md-12">
		<div class="row">
			{% for ressourcesCourante in ressour %}
				<div class="col-md-4">
					<ul class="list-group">
						<li class="list-group-item" style="text-align:center"><strong>Nom : </strong>{{ressourcesCourante.nom}}
						</li>
						<li class="list-group-item"><strong>Activiter : </strong>{{ressourcesCourante.activiter}}
						</li>
						<li class="list-group-item"><strong>Adresse : </strong>{{ressourcesCourante.adresse}}
						</li>
						<li class="list-group-item"><strong>Lien vers site web : </strong>{{ressourcesCourante.lienSiteWeb}}
						</li>
						<li class="list-group-item">
							<a href="{{path('ProStages-ModifierEntreprise',{id:ressourcesCourante.id})}}">Modifier l'entreprise </a>
						</li>
						<li class="list-group-item">
							<a href="{{path('ProStages-stagesParEntreprise',{nom:ressourcesCourante.nom})}}"> stage proposer</a>
						</li>
					</ul>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
